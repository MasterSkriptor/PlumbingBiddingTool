@page "/jobs"
@page "/"
@using PlumbingBiddingTool.Application.Jobs
@using PlumbingBiddingTool.Application.Contractors
@using PlumbingBiddingTool.Domain.Entities
@inject JobService JobService
@inject ContractorService ContractorService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Jobs</PageTitle>

<h1>Jobs</h1>

@if (isLoading)
{
    <div class="loading-overlay">
        <div class="spinner-border text-light" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="mt-2 text-light">Loading jobs...</div>
    </div>
}

<div class="row mb-3">
    <div class="col-md-4">
        <label class="form-label">Filter by Contractor</label>
        <select class="form-select" @onchange="OnContractorFilterChanged">
            <option value="0">All Contractors</option>
            @foreach (var contractor in contractors)
            {
                <option value="@contractor.Id">@contractor.Name</option>
            }
        </select>
    </div>
    <div class="col-md-8 d-flex align-items-end">
        <button class="btn btn-primary" @onclick="CreateNewJob">Create New Job</button>
    </div>
</div>

@if (jobs.Count == 0)
{
    <p><em>No jobs found. Click "Create New Job" to create one.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Job Name</th>
                <th>Contractor</th>
                <th>Status</th>
                <th>Total Cost</th>
                <th>Fixture Items</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in jobs)
            {
                <tr>
                    <td>@job.Id</td>
                    <td>@job.JobName</td>
                    <td>@job.Contractor.Name</td>
                    <td>
                        <button class="badge @GetStatusBadgeClass(job.Status) btn-none border-0" 
                                style="cursor: pointer; padding: 0.5rem; border-radius: 0.25rem;"
                                @onclick="() => ShowStatusDropdown(job.Id, job.Status)">
                            @job.Status
                        </button>
                        @if (statusDropdownJobId == job.Id)
                        {
                            <div class="dropdown-menu show" style="position: absolute; display: block; min-width: 150px; z-index: 100;">
                                @foreach (JobStatus status in Enum.GetValues(typeof(JobStatus)))
                                {
                                    <button class="dropdown-item" @onclick="() => ChangeJobStatus(job.Id, status)" style="border: none; background: none; text-align: left; width: 100%; padding: 0.5rem 1rem;">
                                        @status
                                    </button>
                                }
                                <button class="dropdown-item" @onclick="() => statusDropdownJobId = 0" style="border: none; background: none; text-align: left; width: 100%; padding: 0.5rem 1rem; color: #6c757d;">
                                    Cancel
                                </button>
                            </div>
                        }
                    </td>
                    <td>$@job.TotalCost.ToString("F2")</td>
                    <td>@job.JobFixtureItems.Count item(s)</td>
                        <td>
                            <button class="btn btn-sm btn-secondary" @onclick="() => ViewJobDetails(job.Id)">View Details</button>
                            <button class="btn btn-sm btn-info" @onclick="() => EditJob(job.Id)">Edit</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteJob(job.Id)">Delete</button>
                        </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Job> jobs = new();
    private List<Contractor> contractors = new();
    private int selectedContractorId = 0;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        await LoadData();
        isLoading = false;
    }

    private async Task LoadData()
    {
        contractors = (await ContractorService.GetAllContractorsAsync()).ToList();
        await LoadJobs();
    }

    private async Task LoadJobs()
    {
        if (selectedContractorId == 0)
        {
            jobs = (await JobService.GetAllJobsAsync()).ToList();
        }
        else
        {
            jobs = (await JobService.GetJobsByContractorAsync(selectedContractorId)).ToList();
        }
    }

    private async Task OnContractorFilterChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out var contractorId))
        {
            selectedContractorId = contractorId;
            isLoading = true;
            await LoadJobs();
            isLoading = false;
        }
    }

    private void CreateNewJob()
    {
        NavigationManager.NavigateTo("/jobs/create");
    }

    private void ViewJobDetails(int jobId)
    {
        NavigationManager.NavigateTo($"/jobs/details/{jobId}");
    }

    private void EditJob(int jobId)
    {
        NavigationManager.NavigateTo($"/jobs/edit/{jobId}");
    }

    private async Task DeleteJob(int id)
    {
        isLoading = true;
        await JobService.DeleteJobAsync(id);
        await LoadJobs();
        isLoading = false;
    }

    private string GetStatusBadgeClass(JobStatus status)
    {
        return status switch
        {
            JobStatus.Open => "bg-primary",
            JobStatus.Accepted => "bg-success",
            JobStatus.Closed => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private bool isLoading = false;
    private int statusDropdownJobId = 0;

    private void ShowStatusDropdown(int jobId, JobStatus currentStatus)
    {
        statusDropdownJobId = statusDropdownJobId == jobId ? 0 : jobId;
    }

    private async Task ChangeJobStatus(int jobId, JobStatus newStatus)
    {
        statusDropdownJobId = 0;
        isLoading = true;
        
        var job = jobs.FirstOrDefault(j => j.Id == jobId);
        if (job != null)
        {
            var existingOptions = job.JobOptions.Select(o => new JobOptionInput 
            { 
                Name = o.Name, 
                Quantity = o.Quantity, 
                Price = o.Price 
            }).ToList();
            
            await JobService.UpdateJobAsync(jobId, job.JobName, newStatus, 
                job.JobFixtureItems.ToDictionary(jfi => jfi.FixtureItemId, jfi => jfi.Quantity),
                existingOptions);
            await LoadJobs();
        }
        
        isLoading = false;
        
    }
}
